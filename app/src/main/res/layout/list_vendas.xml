<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:ignore="UselessLeaf">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Cliente:"
            android:textColor="@color/preto"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Codigo da Venda:"
            android:textColor="@color/preto"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Codigo do Cliente:"
            android:textColor="@color/preto"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data da Venda:"
            android:textColor="@color/preto"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor da Venda:"
            android:textColor="@color/preto"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desconto:"
            android:textColor="@color/preto"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo Pagamento:"
            android:textColor="@color/preto"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessLeaf">

        <TextView
            android:id="@+id/tvNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/branco"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:text="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCodigo"
            android:textSize="14sp"
            android:textColor="@color/branco"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvCodigoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="@color/branco"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvDataVenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00-00-000"
            android:textColor="@color/branco"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvValorVenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/branco"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvDesconto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/branco"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvTipoPagamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/branco"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" />

    </LinearLayout>

</LinearLayout>
