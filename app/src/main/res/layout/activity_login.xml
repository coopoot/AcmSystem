<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diego.aula1.View.LoginActivity"
    android:background="@color/azul">

    <TextView
        android:text="Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edLogin"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="39dp"
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        tools:ignore="HardcodedText"
        android:textColor="@color/branco" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="60dp"
        android:id="@+id/edLogin"
        tools:ignore="HardcodedText,LabelFor"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/nova"
        android:background="@color/branco"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="69dp"
        android:background="@color/nova"
        android:text="Entrar"
        android:textColor="@color/branco"
        tools:ignore="HardcodedText"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edSenha"
        android:layout_alignEnd="@+id/edSenha" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:id="@+id/tvMsg"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_above="@+id/btnEntrar"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="24dp"
        android:id="@+id/edSenha"
        tools:ignore="LabelFor"
        android:textColor="@color/nova"
        android:background="@color/branco"
        android:inputType="textPassword"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/edLogin"
        android:textSize="20sp" />

    <TextView
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="120dp"
        tools:ignore="@color/nova,HardcodedText"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textColor="@color/branco"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo3"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription" />

</RelativeLayout>
